{
  "name": "bun-htmx",
  "module": "index.tsx",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run --watch src/server.tsx\" \"bun run tailwind:dev\"",
    "dev-inspect": "concurrently \"bun run --inspect --watch src/server.tsx\" \"bun run tailwind:dev\"",
    "tailwind": "bunx tailwindcss -i ./src/base.css -o ./dist/output.css",
    "tailwind:dev": "bunx tailwindcss -i ./src/base.css -o ./dist/base.css --watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "bun-types": "latest",
    "tailwindcss": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/web": "^0.0.99",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
